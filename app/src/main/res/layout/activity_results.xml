<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ResultsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Trophy Icon -->
        <ImageView
            android:id="@+id/trophyIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/congrats"
            app:tint="@color/usj_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/congratsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/congrats"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trophyIcon" />

        <!-- Score Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/scoreCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="32dp"
            app:cardBackgroundColor="@color/usj_orange"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/congratsText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="28dp"
                android:paddingHorizontal="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/final_score"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textColor="@color/white"
                    android:alpha="0.9" />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="0"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/scoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/points"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:alpha="0.85" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Statistics Title -->
        <TextView
            android:id="@+id/statsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/statistics_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scoreCard" />

        <!-- Stats Grid -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/statsGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:columnCount="2"
            app:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statsTitle">

            <!-- Correct Answers Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/stat_correct_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/checkbox_on_background"
                        app:tint="@color/stat_correct_icon"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/correctAnswersValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="8/10"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/stat_value_text" />

                    <TextView
                        android:id="@+id/correctAnswersText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/stat_correct_label"
                        android:textSize="11sp"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Accuracy Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/stat_accuracy_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_compass"
                        app:tint="@color/stat_accuracy_icon"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/accuracyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="80%"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/stat_value_text" />

                    <TextView
                        android:id="@+id/accuracyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/stat_accuracy_label"
                        android:textSize="11sp"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Best Streak Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/stat_streak_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="@color/stat_streak_icon"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/bestStreakValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="5"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/stat_value_text" />

                    <TextView
                        android:id="@+id/bestStreakText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/stat_streak_label"
                        android:textSize="11sp"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Total Time Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/stat_time_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="@color/stat_time_icon"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/totalTimeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="2:30"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/stat_value_text" />

                    <TextView
                        android:id="@+id/totalTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/stat_time_label"
                        android:textSize="11sp"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.gridlayout.widget.GridLayout>

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/playAgainButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="28dp"
            android:text="@string/play_again"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statsGrid" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exitButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/exit"
            android:textSize="16sp"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="28dp"
            app:strokeColor="@color/usj_orange"
            android:textColor="@color/usj_orange"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconGravity="textStart"
            app:iconTint="@color/usj_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playAgainButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
